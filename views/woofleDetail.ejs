<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <title>Woofle Detail</title>
</head>
<body>
<div class="woofle-detail">
    <div class="woofle-detail-img">
        <img src="<%= woofle.image %>" alt="<%= woofle.breed %>">
    </div>

    <div class="woofle-detail-main">
        <div>
            <p>Breed:</p>

            <p><%= woofle.breed %></p>
        </div>

        <div>
            <p>Life Span:</p>

            <p><%= woofle.lifeSpan %> years</p>
        </div>

        <div>
            <p>Description:</p>

            <p><%= woofle.description %></p>
        </div>

        <div>
            <p>Features:</p>

            <% woofle.features.forEach( feature => { %>
                <p> <%= feature %></p>
            <%}) %>
        </div>
    </div>

    <a href="/woofles" class="woofle-detail-footer">Go back to the list</a>
</div>
</body>
</html>